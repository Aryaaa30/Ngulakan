<!DOCTYPE html>
<html>
<head>
    <title>Daftar Pengumuman</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function filterTabel() {
            const nama_pengumuman = document.getElementById('filterNama').value.toLowerCase();
            const kategori_pengumuman = document.getElementById('filterKategori').value.toLowerCase();
            const status_pengumuman = document.getElementById('filterStatus').value.toLowerCase();
            const prioritas_pengumuman = document.getElementById('filterPrioritas').value.toLowerCase();
            const kegiatan_desa = document.getElementById('filterKegiatanDesa').value.toLowerCase();
            const tanggal_pengumuman = document.getElementById('filterTanggal').value;

            const rows = document.querySelectorAll('#tabelPengumuman tbody tr');
            rows.forEach(row => {
                // Skip empty message row
                if (row.querySelector('td[colspan]')) {
                    return;
                }

                const namaText = row.querySelector('[data-nama]').textContent.trim().toLowerCase();
                const kategoriText = row.querySelector('[data-kategori] span').textContent.trim().toLowerCase();
                const statusText = row.querySelector('[data-status] span').textContent.trim().toLowerCase();
                const prioritasText = row.querySelector('td:nth-child(4) span').textContent.trim().toLowerCase();
                const kegiatanText = row.querySelector('td:nth-child(6) span').textContent.trim().toLowerCase();
                const tanggalVal = row.querySelector('[data-tanggal]').getAttribute('data-tanggal');

                const cocok =
                    (nama_pengumuman === '' || namaText.includes(nama_pengumuman)) &&
                    (kategori_pengumuman === 'semua' || kategoriText === kategori_pengumuman) &&
                    (status_pengumuman === 'semua' || statusText === status_pengumuman) &&
                    (prioritas_pengumuman === 'semua' || prioritasText === prioritas_pengumuman) &&
                    (kegiatan_desa === 'semua' || kegiatanText === kegiatan_desa) &&
                    (tanggal_pengumuman === '' || tanggalVal === tanggal_pengumuman);

                row.style.display = cocok ? '' : 'none';
            });

            // Update empty message if needed
            updateEmptyMessage();
        }

        function updateEmptyMessage() {
            const visibleRows = document.querySelectorAll('#tabelPengumuman tbody tr:not([style*="display: none"])');
            const emptyRow = document.querySelector('#tabelPengumuman tbody tr td[colspan]');
            
            if (visibleRows.length === 0 && emptyRow) {
                emptyRow.parentElement.style.display = '';
                emptyRow.textContent = 'Tidak ada pengumuman yang sesuai dengan filter.';
            } else if (emptyRow) {
                emptyRow.parentElement.style.display = 'none';
            }
        }

        function resetFilter() {
            document.getElementById('filterNama').value = '';
            document.getElementById('filterKategori').value = 'semua';
            document.getElementById('filterStatus').value = 'semua';
            document.getElementById('filterPrioritas').value = 'semua';
            document.getElementById('filterKegiatanDesa').value = 'semua';
            document.getElementById('filterTanggal').value = '';
            filterTabel();
        }

        function togglePengumumanStatus(pengumumanId, currentStatus) {
            const newStatus = currentStatus === 'Dipublikasi' ? 'Draft' : 'Dipublikasi';
            if (confirm(`Yakin ingin mengubah status pengumuman menjadi ${newStatus}?`)) {
                fetch(`/admin/pengumuman/toggle-status/${pengumumanId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ status_pengumuman: newStatus })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Gagal mengubah status pengumuman');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Terjadi kesalahan saat mengubah status');
                });
            }
        }

        // Auto-hide messages after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const messages = document.querySelectorAll('.message');
            messages.forEach(message => {
                setTimeout(() => {
                    message.style.display = 'none';
                }, 5000);
            });

            // Initialize filter
            filterTabel();
        });
    </script>
</head>
<body class="bg-gray-50">
    <%- include('../../partials/navbar') %>

    <div class="max-w-6xl mx-auto mt-8 p-8 bg-white rounded shadow">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold">Daftar Pengumuman</h2>
            <!-- Tombol tambah dihilangkan untuk mode public -->
        </div>

        <!-- Success/Error Messages -->
        <% if (typeof req !== 'undefined' && req.query.success) { %>
            <div class="message mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
                <%= req.query.success %>
            </div>
        <% } %>

        <% if (typeof req !== 'undefined' && req.query.error) { %>
            <div class="message mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
                <%= req.query.error %>
            </div>
        <% } %>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-2">
            <input type="text" id="filterNama" oninput="filterTabel()" placeholder="Cari Nama Pengumuman" class="border px-3 py-2 rounded" />
            <select id="filterKategori" onchange="filterTabel()" class="border px-3 py-2 rounded">
                <option value="semua">Semua Kategori</option>
                <option value="umum">Umum</option>
                <option value="bantuan sosial">Bantuan Sosial</option>
                <option value="keagamaan">Keagamaan</option>
                <option value="kesehatan">Kesehatan</option>
                <option value="pendidikan">Pendidikan</option>
                <option value="keamanan">Keamanan</option>
                <option value="pemilu">Pemilu</option>
            </select>
            <select id="filterStatus" onchange="filterTabel()" class="border px-3 py-2 rounded">
                <option value="semua">Semua Status</option>
                <option value="draft">Draft</option>
                <option value="dipublikasi">Dipublikasi</option>
                <option value="arsip">Arsip</option>
            </select>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
            <select id="filterPrioritas" onchange="filterTabel()" class="border px-3 py-2 rounded">
                <option value="semua">Semua Prioritas</option>
                <option value="normal">Normal</option>
                <option value="penting">Penting</option>
                <option value="sangat penting">Sangat Penting</option>
            </select>
            <select id="filterKegiatanDesa" onchange="filterTabel()" class="border px-3 py-2 rounded">
                <option value="semua">Semua Kegiatan Desa</option>
                <% if (pengumuman && pengumuman.length > 0) { %>
                    <% let kegiatanSet = new Set(); pengumuman.forEach(item => { if (item.nama_kegiatan) kegiatanSet.add(item.nama_kegiatan); }); %>
                    <% Array.from(kegiatanSet).forEach(nama => { %>
                        <option value="<%= nama.toLowerCase() %>"><%= nama %></option>
                    <% }) %>
                <% } %>
            </select>
            <input type="date" id="filterTanggal" onchange="filterTabel()" class="border px-3 py-2 rounded" />
        </div>
        <div class="mb-4">
            <button onclick="resetFilter()" class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700">Reset Filter</button>
        </div>

        <div class="overflow-x-auto">
            <table id="tabelPengumuman" class="min-w-full table-auto border text-sm">
                <thead>
                    <tr class="bg-gray-200 text-left">
                        <th class="px-3 py-2 border">Nama Pengumuman</th>
                        <th class="px-3 py-2 border">Kategori</th>
                        <th class="px-3 py-2 border">Status</th>
                        <th class="px-3 py-2 border">Prioritas</th>
                        <th class="px-3 py-2 border">Tanggal Pengumuman</th>
                        <th class="px-3 py-2 border">Kegiatan Desa</th>
                        <!-- Kolom aksi dihilangkan untuk mode public -->
                    </tr>
                </thead>
                <tbody>
                    <% if (pengumuman.length === 0) { %>
                        <tr>
                            <td colspan="7" class="px-3 py-4 text-center text-gray-500">Belum ada pengumuman yang terdaftar.</td>
                        </tr>
                    <% } else { %>
                        <% pengumuman.forEach(item => { %>
                        <tr>
                            <td class="px-3 py-2 border" data-nama>
                                <a href="/pengumuman/detail/<%= item.id_pengumuman_desa %>" class="text-blue-600 hover:underline">
                                    <%= item.nama_pengumuman %>
                                </a>
                            </td>
                            <td class="px-3 py-2 border" data-kategori>
                                <span class="inline-block px-2 py-1 text-xs font-medium rounded-full 
                                           <%= item.kategori_pengumuman === 'Bantuan Sosial' ? 'bg-red-100 text-red-800' : 
                                               item.kategori_pengumuman === 'Keagamaan' ? 'bg-purple-100 text-purple-800' : 
                                               item.kategori_pengumuman === 'Kesehatan' ? 'bg-green-100 text-green-800' : 
                                               item.kategori_pengumuman === 'Pendidikan' ? 'bg-blue-100 text-blue-800' : 
                                               item.kategori_pengumuman === 'Keamanan' ? 'bg-orange-100 text-orange-800' : 
                                               item.kategori_pengumuman === 'Pemilu' ? 'bg-yellow-100 text-yellow-800' : 
                                               'bg-gray-100 text-gray-800' %>">
                                    <%= item.kategori_pengumuman %>
                                </span>
                            </td>
                            <td class="px-3 py-2 border" data-status>
                                <span class="px-2 py-1 rounded text-xs 
                                           <%= item.status_pengumuman === 'Dipublikasi' ? 'bg-green-100 text-green-800' : 
                                               item.status_pengumuman === 'Draft' ? 'bg-yellow-100 text-yellow-800' : 
                                               'bg-gray-100 text-gray-800' %>">
                                    <%= item.status_pengumuman %>
                                </span>
                            </td>
                            <td class="px-3 py-2 border">
                                <span class="px-2 py-1 rounded text-xs 
                                           <%= item.prioritas === 'Sangat Penting' ? 'bg-red-100 text-red-800' : 
                                               item.prioritas === 'Penting' ? 'bg-orange-100 text-orange-800' : 
                                               'bg-gray-100 text-gray-800' %>">
                                    <%= item.prioritas %>
                                </span>
                            </td>
                            <td class="px-3 py-2 border" data-tanggal="<%= new Date(item.tanggal_pengumuman).toISOString().split('T')[0] %>">
                                <%= new Date(item.tanggal_pengumuman).toLocaleDateString('id-ID') %>
                            </td>
                            <td class="px-3 py-2 border">
                                <% if (item.nama_kegiatan) { %>
                                    <span class="inline-block px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
                                        <%= item.nama_kegiatan %>
                                    </span>
                                <% } else { %>
                                    <span class="inline-block px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800">
                                        Tidak ada kegiatan
                                    </span>
                                <% } %>
                            </td>
                            <!-- Kolom aksi dihilangkan untuk mode public -->
                        </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>