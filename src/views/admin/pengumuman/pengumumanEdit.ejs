<!DOCTYPE html>
<html>
<head>
    <title>Edit Pengumuman</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function validateForm() {
            const nama_pengumuman = document.getElementById('nama_pengumuman').value.trim();
            const isi_pengumuman = document.getElementById('isi_pengumuman').value.trim();
            const kategori_pengumuman = document.getElementById('kategori_pengumuman').value;
            const status_pengumuman = document.getElementById('status_pengumuman').value;

            if (!nama_pengumuman) {
                alert('Nama pengumuman harus diisi');
                return false;
            }

            if (!isi_pengumuman) {
                alert('Isi pengumuman harus diisi');
                return false;
            }

            if (!kategori_pengumuman) {
                alert('Kategori harus dipilih');
                return false;
            }

            if (!status_pengumuman) {
                alert('Status harus dipilih');
                return false;
            }

            return true;
        }

        function updateCharacterCount() {
            const isi_pengumuman = document.getElementById('isi_pengumuman').value;
            const maxLength = 1000;
            const currentLength = isi_pengumuman.length;
            const remaining = maxLength - currentLength;
            
            document.getElementById('charCount').textContent = `${currentLength}/${maxLength} karakter`;
            
            if (remaining < 0) {
                document.getElementById('charCount').classList.add('text-red-600');
            } else {
                document.getElementById('charCount').classList.remove('text-red-600');
            }
        }

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            updateCharacterCount();
        });
    </script>
</head>
<body class="bg-gray-50">
    <%- include('../../partials/navbar') %>

    <div class="max-w-4xl mx-auto mt-8 p-8 bg-white rounded shadow">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold">Edit Pengumuman</h2>
            <div class="flex gap-2">
                <a href="/admin/pengumuman" class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700">Kembali</a>
            </div>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
                <%= error %>
            </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success) { %>
            <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
                <%= success %>
            </div>
        <% } %>

        <form id="pengumumanForm" action="/admin/pengumuman/edit/<%= pengumuman.id_pengumuman_desa %>" method="POST" enctype="multipart/form-data" onsubmit="return validateForm()">
            <div class="mb-4">
                <label for="nama_pengumuman" class="block text-sm font-medium text-gray-700 mb-2">Nama Pengumuman *</label>
                <input type="text" id="nama_pengumuman" name="nama_pengumuman" value="<%= pengumuman.nama_pengumuman %>" required 
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="Masukkan nama pengumuman">
            </div>

            <div class="mb-4">
                <label for="isi_pengumuman" class="block text-sm font-medium text-gray-700 mb-2">Isi Pengumuman *</label>
                <textarea id="isi_pengumuman" name="isi_pengumuman" rows="8" required 
                          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                          placeholder="Masukkan isi pengumuman"
                          oninput="updateCharacterCount()"><%= pengumuman.isi_pengumuman %></textarea>
                <div class="flex justify-between items-center mt-1">
                    <p id="charCount" class="text-sm text-gray-500">0/1000 karakter</p>
                    <p class="text-sm text-gray-500">Maksimal 1000 karakter</p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                <div>
                    <label for="kategori_pengumuman" class="block text-sm font-medium text-gray-700 mb-2">Kategori *</label>
                    <select id="kategori_pengumuman" name="kategori_pengumuman" required 
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">Pilih Kategori</option>
                        <option value="Umum" <%= pengumuman.kategori_pengumuman === 'Umum' ? 'selected' : '' %>>Umum</option>
                        <option value="Bantuan Sosial" <%= pengumuman.kategori_pengumuman === 'Bantuan Sosial' ? 'selected' : '' %>>Bantuan Sosial</option>
                        <option value="Keagamaan" <%= pengumuman.kategori_pengumuman === 'Keagamaan' ? 'selected' : '' %>>Keagamaan</option>
                        <option value="Kesehatan" <%= pengumuman.kategori_pengumuman === 'Kesehatan' ? 'selected' : '' %>>Kesehatan</option>
                        <option value="Pendidikan" <%= pengumuman.kategori_pengumuman === 'Pendidikan' ? 'selected' : '' %>>Pendidikan</option>
                        <option value="Keamanan" <%= pengumuman.kategori_pengumuman === 'Keamanan' ? 'selected' : '' %>>Keamanan</option>
                        <option value="Pemilu" <%= pengumuman.kategori_pengumuman === 'Pemilu' ? 'selected' : '' %>>Pemilu</option>
                    </select>
                </div>

                <div>
                    <label for="status_pengumuman" class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                    <select id="status_pengumuman" name="status_pengumuman" 
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="Draft" <%= pengumuman.status_pengumuman === 'Draft' ? 'selected' : '' %>>Draft</option>
                        <option value="Dipublikasi" <%= pengumuman.status_pengumuman === 'Dipublikasi' ? 'selected' : '' %>>Dipublikasi</option>
                        <option value="Arsip" <%= pengumuman.status_pengumuman === 'Arsip' ? 'selected' : '' %>>Arsip</option>
                    </select>
                </div>

                <div>
                    <label for="prioritas" class="block text-sm font-medium text-gray-700 mb-2">Prioritas</label>
                    <select id="prioritas" name="prioritas" 
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="Normal" <%= pengumuman.prioritas === 'Normal' ? 'selected' : '' %>>Normal</option>
                        <option value="Penting" <%= pengumuman.prioritas === 'Penting' ? 'selected' : '' %>>Penting</option>
                        <option value="Sangat Penting" <%= pengumuman.prioritas === 'Sangat Penting' ? 'selected' : '' %>>Sangat Penting</option>
                    </select>
                </div>
            </div>

            <div class="mb-6">
            <div class="mb-4">
                <label for="id_kegiatan_desa" class="block text-sm font-medium text-gray-700 mb-2">Kegiatan Desa *</label>
                <select id="id_kegiatan_desa" name="id_kegiatan_desa" required class="w-full px-3 py-2 border border-gray-300 rounded-md">
                    <option value="">Pilih Kegiatan Desa</option>
                    <% if (typeof kegiatanDesa !== 'undefined' && kegiatanDesa.length > 0) { %>
                        <% kegiatanDesa.forEach(kegiatan => { %>
                            <option value="<%= kegiatan.id_kegiatan_desa %>" <%= pengumuman.id_kegiatan_desa == kegiatan.id_kegiatan_desa ? 'selected' : '' %>><%= kegiatan.nama_kegiatan %></option>
                        <% }) %>
                    <% } %>
                </select>
            </div>
                <label for="tanggal_pengumuman" class="block text-sm font-medium text-gray-700 mb-2">Tanggal Pengumuman</label>
                <input type="date" id="tanggal_pengumuman" name="tanggal_pengumuman" 
                       value="<%= new Date(pengumuman.tanggal_pengumuman).toISOString().split('T')[0] %>"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            <div class="mb-6">
                <label for="foto" class="block text-sm font-medium text-gray-700 mb-2">Foto Pengumuman</label>
                <input type="file" id="foto" name="foto" accept="image/*" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                <p class="text-xs text-gray-500 mt-1">Opsional. Format gambar: jpg, jpeg, png.</p>
                <% if (pengumuman.foto) { %>
                    <div class="mt-2">
                        <img src="/uploads/foto/pengumuman/<%= pengumuman.foto %>" alt="Foto Pengumuman" class="max-h-40 rounded shadow">
                        <p class="text-xs text-gray-500 mt-1">Foto saat ini</p>
                    </div>
                <% } %>
            </div>

            <div class="mb-4 p-4 bg-gray-100 rounded">
                <h3 class="font-medium text-gray-700 mb-2">Informasi Pengumuman</h3>
                <p class="text-sm text-gray-600">ID: <%= pengumuman.id_pengumuman_desa %></p>
                <p class="text-sm text-gray-600">Dibuat: <%= new Date(pengumuman.created_at).toLocaleString('id-ID') %></p>
                <% if (pengumuman.updated_at) { %>
                    <p class="text-sm text-gray-600">Terakhir diupdate: <%= new Date(pengumuman.updated_at).toLocaleString('id-ID') %></p>
                <% } %>
            </div>

            <div class="flex gap-4">
                <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                    Update Pengumuman
                </button>
                <a href="/admin/pengumuman" class="px-6 py-2 bg-red-500 text-white rounded hover:bg-red-600">
                    Batal
                </a>
            </div>
        </form>
    </div>
</body>
</html> 