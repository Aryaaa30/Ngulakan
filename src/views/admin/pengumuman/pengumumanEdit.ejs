<!DOCTYPE html>
<html>
<head>
    <title>Edit Pengumuman</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function validateForm() {
            const judul = document.getElementById('judul').value.trim();
            const isi = document.getElementById('isi').value.trim();
            const kategori = document.getElementById('kategori').value;
            const status = document.getElementById('status').value;

            if (!judul) {
                alert('Judul pengumuman harus diisi');
                return false;
            }

            if (!isi) {
                alert('Isi pengumuman harus diisi');
                return false;
            }

            if (!kategori) {
                alert('Kategori harus dipilih');
                return false;
            }

            if (!status) {
                alert('Status harus dipilih');
                return false;
            }

            return true;
        }

        function updateCharacterCount() {
            const isi = document.getElementById('isi').value;
            const maxLength = 1000;
            const currentLength = isi.length;
            const remaining = maxLength - currentLength;
            
            document.getElementById('charCount').textContent = `${currentLength}/${maxLength} karakter`;
            
            if (remaining < 0) {
                document.getElementById('charCount').classList.add('text-red-600');
            } else {
                document.getElementById('charCount').classList.remove('text-red-600');
            }
        }

        // Auto save functionality
        let autoSaveTimer;
        const AUTO_SAVE_DELAY = 3000; // 3 seconds

        function setupAutoSave() {
            const form = document.getElementById('pengumumanForm');
            const inputs = form.querySelectorAll('input, select, textarea');
            
            inputs.forEach(input => {
                input.addEventListener('input', () => {
                    clearTimeout(autoSaveTimer);
                    autoSaveTimer = setTimeout(() => {
                        autoSave();
                    }, AUTO_SAVE_DELAY);
                });
            });
        }

        function autoSave() {
            const formData = new FormData(document.getElementById('pengumumanForm'));
            const data = Object.fromEntries(formData);
            
            // Add pengumuman ID to the draft
            data.pengumumanId = '<%= pengumuman.id_pengumuman_desa %>';
            
            // Save to localStorage
            localStorage.setItem(`pengumumanEditDraft_${data.pengumumanId}`, JSON.stringify(data));
            
            // Show auto save indicator
            showAutoSaveIndicator('Draft tersimpan otomatis');
        }

        function showAutoSaveIndicator(message) {
            const indicator = document.getElementById('autoSaveIndicator');
            indicator.textContent = message;
            indicator.classList.remove('hidden');
            
            setTimeout(() => {
                indicator.classList.add('hidden');
            }, 2000);
        }

        function loadDraft() {
            const pengumumanId = '<%= pengumuman.id_pengumuman_desa %>';
            const draft = localStorage.getItem(`pengumumanEditDraft_${pengumumanId}`);
            if (draft) {
                const data = JSON.parse(draft);
                
                // Fill form fields
                Object.keys(data).forEach(key => {
                    if (key !== 'pengumumanId') {
                        const field = document.getElementById(key);
                        if (field) {
                            field.value = data[key];
                        }
                    }
                });
                
                // Update character count
                updateCharacterCount();
                
                showAutoSaveIndicator('Draft dimuat');
            }
        }

        function clearDraft() {
            const pengumumanId = '<%= pengumuman.id_pengumuman_desa %>';
            localStorage.removeItem(`pengumumanEditDraft_${pengumumanId}`);
            showAutoSaveIndicator('Draft dihapus');
        }

        // Initialize auto save when page loads
        document.addEventListener('DOMContentLoaded', function() {
            setupAutoSave();
            loadDraft();
            updateCharacterCount();
        });

        // Clear draft when form is successfully submitted
        document.getElementById('pengumumanForm').addEventListener('submit', function() {
            clearDraft();
        });
    </script>
</head>
<body class="bg-gray-50">
    <%- include('../../partials/navbar') %>

    <div class="max-w-4xl mx-auto mt-8 p-8 bg-white rounded shadow">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold">Edit Pengumuman</h2>
            <div class="flex gap-2">
                <button onclick="clearDraft()" class="px-3 py-1 bg-gray-500 text-white rounded text-sm hover:bg-gray-600">
                    Hapus Draft
                </button>
                <a href="/admin/pengumuman" class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700">Kembali</a>
            </div>
        </div>

        <!-- Auto Save Indicator -->
        <div id="autoSaveIndicator" class="hidden mb-4 p-2 bg-blue-100 border border-blue-400 text-blue-700 rounded text-sm">
            <span class="font-medium">âœ“</span> <span id="autoSaveMessage"></span>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
                <%= error %>
            </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success) { %>
            <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
                <%= success %>
            </div>
        <% } %>

        <form id="pengumumanForm" action="/admin/pengumuman/edit/<%= pengumuman.id_pengumuman_desa %>" method="POST" onsubmit="return validateForm()">
            <div class="mb-4">
                <label for="judul" class="block text-sm font-medium text-gray-700 mb-2">Judul Pengumuman *</label>
                <input type="text" id="judul" name="judul" value="<%= pengumuman.nama_pengumuman %>" required 
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="Masukkan judul pengumuman">
            </div>

            <div class="mb-4">
                <label for="isi" class="block text-sm font-medium text-gray-700 mb-2">Isi Pengumuman *</label>
                <textarea id="isi" name="isi" rows="8" required 
                          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                          placeholder="Masukkan isi pengumuman"
                          oninput="updateCharacterCount()"><%= pengumuman.isi_pengumuman %></textarea>
                <div class="flex justify-between items-center mt-1">
                    <p id="charCount" class="text-sm text-gray-500">0/1000 karakter</p>
                    <p class="text-sm text-gray-500">Maksimal 1000 karakter</p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                    <label for="kategori" class="block text-sm font-medium text-gray-700 mb-2">Kategori *</label>
                    <select id="kategori" name="kategori" required 
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">Pilih Kategori</option>
                        <option value="Umum" <%= pengumuman.kategori_pengumuman === 'Umum' ? 'selected' : '' %>>Umum</option>
                        <option value="Penting" <%= pengumuman.kategori_pengumuman === 'Penting' ? 'selected' : '' %>>Penting</option>
                        <option value="Darurat" <%= pengumuman.kategori_pengumuman === 'Darurat' ? 'selected' : '' %>>Darurat</option>
                        <option value="Kegiatan" <%= pengumuman.kategori_pengumuman === 'Kegiatan' ? 'selected' : '' %>>Kegiatan</option>
                        <option value="Informasi" <%= pengumuman.kategori_pengumuman === 'Informasi' ? 'selected' : '' %>>Informasi</option>
                    </select>
                </div>

                <div>
                    <label for="status" class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                    <select id="status" name="status" 
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="Aktif" <%= pengumuman.status_pengumuman === 'Aktif' ? 'selected' : '' %>>Aktif</option>
                        <option value="Nonaktif" <%= pengumuman.status_pengumuman === 'Nonaktif' ? 'selected' : '' %>>Nonaktif</option>
                    </select>
                </div>
            </div>

            <div class="mb-6">
                <label for="tanggal" class="block text-sm font-medium text-gray-700 mb-2">Tanggal Pengumuman</label>
                <input type="date" id="tanggal" name="tanggal" 
                       value="<%= new Date(pengumuman.tanggal_pengumuman).toISOString().split('T')[0] %>"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div class="mb-4 p-4 bg-gray-100 rounded">
                <h3 class="font-medium text-gray-700 mb-2">Informasi Pengumuman</h3>
                <p class="text-sm text-gray-600">ID: <%= pengumuman.id_pengumuman_desa %></p>
                <p class="text-sm text-gray-600">Dibuat: <%= new Date(pengumuman.created_at).toLocaleString('id-ID') %></p>
                <% if (pengumuman.updated_at) { %>
                    <p class="text-sm text-gray-600">Terakhir diupdate: <%= new Date(pengumuman.updated_at).toLocaleString('id-ID') %></p>
                <% } %>
            </div>

            <div class="flex gap-4">
                <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                    Update Pengumuman
                </button>
                <button type="button" onclick="autoSave()" class="px-6 py-2 bg-green-600 text-white rounded hover:bg-green-700">
                    Simpan Draft
                </button>
                <a href="/admin/pengumuman" class="px-6 py-2 bg-red-500 text-white rounded hover:bg-red-600">
                    Batal
                </a>
            </div>
        </form>
    </div>
</body>
</html> 