<!DOCTYPE html>
<html>
<head>
    <title>Detail Pengumuman</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <%- include('../../partials/navbar') %>

    <div class="max-w-4xl mx-auto mt-8 p-8 bg-white rounded shadow">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold">Detail Pengumuman</h2>
            <div class="flex gap-2">
                <a href="/admin/pengumuman/edit/<%= pengumuman.id_pengumuman_desa %>" class="px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600">Edit Pengumuman</a>
                <a href="/admin/pengumuman" class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700">Kembali</a>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Informasi Utama -->
            <div class="space-y-6">
                <div class="bg-blue-50 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-blue-800 mb-4">Informasi Utama</h3>
                    <div class="space-y-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Nama Pengumuman</label>
                            <p class="text-lg font-semibold text-gray-900"><%= pengumuman.nama_pengumuman %></p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Kategori</label>
                            <span class="inline-block px-3 py-1 text-sm font-medium rounded-full 
                                       <%= pengumuman.kategori_pengumuman === 'Bantuan Sosial' ? 'bg-red-100 text-red-800' : 
                                           pengumuman.kategori_pengumuman === 'Keagamaan' ? 'bg-purple-100 text-purple-800' : 
                                           pengumuman.kategori_pengumuman === 'Kesehatan' ? 'bg-green-100 text-green-800' : 
                                           pengumuman.kategori_pengumuman === 'Pendidikan' ? 'bg-blue-100 text-blue-800' : 
                                           pengumuman.kategori_pengumuman === 'Keamanan' ? 'bg-orange-100 text-orange-800' : 
                                           pengumuman.kategori_pengumuman === 'Pemilu' ? 'bg-yellow-100 text-yellow-800' : 
                                           'bg-gray-100 text-gray-800' %>">
                                <%= pengumuman.kategori_pengumuman %>
                            </span>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Status</label>
                            <span class="inline-block px-3 py-1 text-sm font-medium rounded-full 
                                       <%= pengumuman.status_pengumuman === 'Dipublikasi' ? 'bg-green-100 text-green-800' : 
                                           pengumuman.status_pengumuman === 'Draft' ? 'bg-yellow-100 text-yellow-800' : 
                                           'bg-gray-100 text-gray-800' %>">
                                <%= pengumuman.status_pengumuman %>
                            </span>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Prioritas</label>
                            <span class="inline-block px-3 py-1 text-sm font-medium rounded-full 
                                       <%= pengumuman.prioritas === 'Sangat Penting' ? 'bg-red-100 text-red-800' : 
                                           pengumuman.prioritas === 'Penting' ? 'bg-orange-100 text-orange-800' : 
                                           'bg-gray-100 text-gray-800' %>">
                                <%= pengumuman.prioritas %>
                            </span>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Tanggal Pengumuman</label>
                            <p class="text-lg text-gray-900"><%= new Date(pengumuman.tanggal_pengumuman).toLocaleDateString('id-ID') %></p>
                        </div>
                    </div>
                </div>

                <!-- Informasi Sistem -->
                <div class="bg-gray-50 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">Informasi Sistem</h3>
                    <div class="space-y-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">ID Pengumuman</label>
                            <p class="text-sm text-gray-600 font-mono"><%= pengumuman.id_pengumuman_desa %></p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Tanggal Dibuat</label>
                            <p class="text-sm text-gray-600"><%= new Date(pengumuman.created_at).toLocaleString('id-ID') %></p>
                        </div>
                        <% if (pengumuman.updated_at) { %>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Terakhir Diupdate</label>
                            <p class="text-sm text-gray-600"><%= new Date(pengumuman.updated_at).toLocaleString('id-ID') %></p>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Isi Pengumuman dan Aksi -->
            <div class="space-y-6">
                <!-- Isi Pengumuman -->
                <div class="bg-green-50 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-green-800 mb-4">Isi Pengumuman</h3>
                    <div class="bg-white p-4 rounded border">
                        <p class="text-gray-800 whitespace-pre-wrap"><%= pengumuman.isi_pengumuman %></p>
                    </div>
                </div>

                <!-- Aksi Cepat -->
                <div class="bg-yellow-50 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-yellow-800 mb-4">Aksi Cepat</h3>
                    <div class="space-y-3">
                        <button onclick="togglePengumumanStatus('<%= pengumuman.id_pengumuman_desa %>', '<%= pengumuman.status_pengumuman %>')" 
                                class="w-full px-4 py-2 <%= pengumuman.status_pengumuman === 'Dipublikasi' ? 'bg-orange-500' : 'bg-green-500' %> text-white rounded hover:opacity-80">
                            <%= pengumuman.status_pengumuman === 'Dipublikasi' ? 'Draft Pengumuman' : 'Publikasi Pengumuman' %>
                        </button>
                        <form action="/admin/pengumuman/hapus/<%= pengumuman.id_pengumuman_desa %>" method="POST" onsubmit="return confirm('Yakin ingin menghapus pengumuman ini? Tindakan ini tidak dapat dibatalkan.')">
                            <button type="submit" class="w-full px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">
                                Hapus Pengumuman
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Statistik Pengumuman -->
                <div class="bg-purple-50 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-purple-800 mb-4">Statistik Pengumuman</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div class="text-center">
                            <div class="text-2xl font-bold text-purple-600">
                                <%= typeof pengumumanStats !== 'undefined' ? pengumumanStats.totalViews || 0 : 0 %>
                            </div>
                            <div class="text-sm text-purple-700">Total Dilihat</div>
                        </div>
                        <div class="text-center">
                            <div class="text-2xl font-bold text-blue-600">
                                <%= typeof pengumumanStats !== 'undefined' ? pengumumanStats.totalShares || 0 : 0 %>
                            </div>
                            <div class="text-sm text-blue-700">Total Dibagikan</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Riwayat Aktivitas (Opsional) -->
        <% if (typeof pengumumanActivities !== 'undefined' && pengumumanActivities.length > 0) { %>
        <div class="mt-8">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Riwayat Aktivitas Terbaru</h3>
            <div class="bg-white border rounded-lg overflow-hidden">
                <table class="min-w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Aktivitas</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tanggal</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% pengumumanActivities.forEach(activity => { %>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                <%= activity.description %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <%= new Date(activity.created_at).toLocaleString('id-ID') %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                    Berhasil
                                </span>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <% } %>
    </div>

    <script>
        function togglePengumumanStatus(pengumumanId, currentStatus) {
            const newStatus = currentStatus === 'Dipublikasi' ? 'Draft' : 'Dipublikasi';
            if (confirm(`Yakin ingin mengubah status pengumuman menjadi ${newStatus}?`)) {
                fetch(`/admin/pengumuman/toggle-status/${pengumumanId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ status_pengumuman: newStatus })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Gagal mengubah status pengumuman');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Terjadi kesalahan saat mengubah status');
                });
            }
        }
    </script>
</body>
</html> 