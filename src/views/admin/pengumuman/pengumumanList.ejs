<!DOCTYPE html>
<html>
<head>
    <title>Daftar Pengumuman</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function filterTabel() {
            const judul = document.getElementById('filterJudul').value.toLowerCase();
            const kategori = document.getElementById('filterKategori').value.toLowerCase();
            const status = document.getElementById('filterStatus').value.toLowerCase();
            const tanggal = document.getElementById('filterTanggal').value;

            const rows = document.querySelectorAll('#tabelPengumuman tbody tr');
            rows.forEach(row => {
                const judulText = row.querySelector('[data-judul]').textContent.toLowerCase();
                const kategoriText = row.querySelector('[data-kategori]').textContent.toLowerCase();
                const statusText = row.querySelector('[data-status]').textContent.toLowerCase();
                const tanggalVal = row.querySelector('[data-tanggal]').getAttribute('data-tanggal');

                const cocok =
                    judulText.includes(judul) &&
                    (kategori === 'semua' || kategoriText === kategori) &&
                    (status === 'semua' || statusText === status) &&
                    (tanggal === '' || tanggalVal === tanggal);

                row.style.display = cocok ? '' : 'none';
            });
        }

        function resetFilter() {
            document.getElementById('filterJudul').value = '';
            document.getElementById('filterKategori').value = 'semua';
            document.getElementById('filterStatus').value = 'semua';
            document.getElementById('filterTanggal').value = '';
            filterTabel();
        }

        function togglePengumumanStatus(pengumumanId, currentStatus) {
            const newStatus = currentStatus === 'Aktif' ? 'Nonaktif' : 'Aktif';
            if (confirm(`Yakin ingin mengubah status pengumuman menjadi ${newStatus}?`)) {
                fetch(`/admin/pengumuman/toggle-status/${pengumumanId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ status: newStatus })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Gagal mengubah status pengumuman');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Terjadi kesalahan saat mengubah status');
                });
            }
        }

        // Auto-hide messages after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const messages = document.querySelectorAll('.message');
            messages.forEach(message => {
                setTimeout(() => {
                    message.style.display = 'none';
                }, 5000);
            });
        });
    </script>
</head>
<body class="bg-gray-50">
    <%- include('../../partials/navbar') %>

    <div class="max-w-6xl mx-auto mt-8 p-8 bg-white rounded shadow">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold">Daftar Pengumuman</h2>
            <a href="/admin/pengumuman/tambah" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Tambah Pengumuman</a>
        </div>

        <!-- Success/Error Messages -->
        <% if (typeof req !== 'undefined' && req.query.success) { %>
            <div class="message mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
                <%= req.query.success %>
            </div>
        <% } %>

        <% if (typeof req !== 'undefined' && req.query.error) { %>
            <div class="message mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
                <%= req.query.error %>
            </div>
        <% } %>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
            <input type="text" id="filterJudul" oninput="filterTabel()" placeholder="Cari Judul" class="border px-3 py-2 rounded" />
            <select id="filterKategori" onchange="filterTabel()" class="border px-3 py-2 rounded">
                <option value="semua">Semua Kategori</option>
                <option value="umum">Umum</option>
                <option value="penting">Penting</option>
                <option value="darurat">Darurat</option>
                <option value="kegiatan">Kegiatan</option>
                <option value="informasi">Informasi</option>
            </select>
            <select id="filterStatus" onchange="filterTabel()" class="border px-3 py-2 rounded">
                <option value="semua">Semua Status</option>
                <option value="aktif">Aktif</option>
                <option value="nonaktif">Nonaktif</option>
            </select>
            <input type="date" id="filterTanggal" onchange="filterTabel()" class="border px-3 py-2 rounded" />
        </div>
        <div class="mb-4">
            <button onclick="resetFilter()" class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700">Reset Filter</button>
        </div>

        <div class="overflow-x-auto">
            <table id="tabelPengumuman" class="min-w-full table-auto border text-sm">
                <thead>
                    <tr class="bg-gray-200 text-left">
                        <th class="px-3 py-2 border">Judul</th>
                        <th class="px-3 py-2 border">Kategori</th>
                        <th class="px-3 py-2 border">Status</th>
                        <th class="px-3 py-2 border">Tanggal Dibuat</th>
                        <th class="px-3 py-2 border">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (pengumuman.length === 0) { %>
                        <tr>
                            <td colspan="5" class="px-3 py-4 text-center text-gray-500">Belum ada pengumuman yang terdaftar.</td>
                        </tr>
                    <% } else { %>
                        <% pengumuman.forEach(item => { %>
                        <tr>
                            <td class="px-3 py-2 border" data-judul>
                                <a href="/admin/pengumuman/<%= item.id_pengumuman_desa %>" class="text-blue-600 hover:underline">
                                    <%= item.nama_pengumuman %>
                                </a>
                            </td>
                            <td class="px-3 py-2 border" data-kategori>
                                <span class="inline-block px-2 py-1 text-xs font-medium rounded-full 
                                           <%= item.kategori_pengumuman === 'Penting' ? 'bg-red-100 text-red-800' : 
                                               item.kategori_pengumuman === 'Darurat' ? 'bg-orange-100 text-orange-800' : 
                                               item.kategori_pengumuman === 'Kegiatan' ? 'bg-blue-100 text-blue-800' : 
                                               'bg-gray-100 text-gray-800' %>">
                                    <%= item.kategori_pengumuman %>
                                </span>
                            </td>
                            <td class="px-3 py-2 border" data-status>
                                <span class="px-2 py-1 rounded text-xs <%= item.status_pengumuman === 'Aktif' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                    <%= item.status_pengumuman %>
                                </span>
                            </td>
                            <td class="px-3 py-2 border" data-tanggal="<%= new Date(item.tanggal_pengumuman).toISOString().split('T')[0] %>">
                                <%= new Date(item.tanggal_pengumuman).toLocaleDateString('id-ID') %>
                            </td>
                            <td class="px-3 py-2 border">
                                <div class="flex flex-wrap gap-2">
                                    <a href="/admin/pengumuman/edit/<%= item.id_pengumuman_desa %>" class="px-2 py-1 bg-yellow-400 text-white rounded hover:bg-yellow-500">Edit</a>
                                    <button onclick="togglePengumumanStatus('<%= item.id_pengumuman_desa %>', '<%= item.status_pengumuman %>')" 
                                            class="px-2 py-1 <%= item.status_pengumuman === 'Aktif' ? 'bg-orange-500' : 'bg-green-500' %> text-white rounded hover:opacity-80">
                                        <%= item.status_pengumuman === 'Aktif' ? 'Nonaktifkan' : 'Aktifkan' %>
                                    </button>
                                    <form action="/admin/pengumuman/hapus/<%= item.id_pengumuman_desa %>" method="POST" onsubmit="return confirm('Yakin ingin menghapus pengumuman ini?')">
                                        <button type="submit" class="px-2 py-1 bg-red-600 text-white rounded hover:bg-red-700">Hapus</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html> 