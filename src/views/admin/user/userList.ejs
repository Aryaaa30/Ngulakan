<!DOCTYPE html>
<html>
<head>
    <title>Daftar User</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function filterTabel() {
            const nama = document.getElementById('filterNama').value.toLowerCase();
            const email = document.getElementById('filterEmail').value.toLowerCase();
            const role = document.getElementById('filterRole').value.toLowerCase();
            const status = document.getElementById('filterStatus').value.toLowerCase();

            const rows = document.querySelectorAll('#tabelUser tbody tr');
            rows.forEach(row => {
                const namaText = row.querySelector('[data-nama]').textContent.toLowerCase();
                const emailText = row.querySelector('[data-email]').textContent.toLowerCase();
                const roleText = row.querySelector('[data-role]').textContent.toLowerCase();
                const statusText = row.querySelector('[data-status]').textContent.toLowerCase();

                const cocok =
                    namaText.includes(nama) &&
                    emailText.includes(email) &&
                    (role === 'semua' || roleText === role) &&
                    (status === 'semua' || statusText === status);

                row.style.display = cocok ? '' : 'none';
            });
        }

        function resetFilter() {
            document.getElementById('filterNama').value = '';
            document.getElementById('filterEmail').value = '';
            document.getElementById('filterRole').value = 'semua';
            document.getElementById('filterStatus').value = 'semua';
            filterTabel();
        }

        function toggleUserStatus(userId, currentStatus) {
            const newStatus = currentStatus === 'Aktif' ? 'Nonaktif' : 'Aktif';
            if (confirm(`Yakin ingin mengubah status user menjadi ${newStatus}?`)) {
                fetch(`/admin/users/toggle-status/${userId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ status: newStatus })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Gagal mengubah status user');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Terjadi kesalahan saat mengubah status');
                });
            }
        }

        // Auto-hide messages after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const messages = document.querySelectorAll('.message');
            messages.forEach(message => {
                setTimeout(() => {
                    message.style.display = 'none';
                }, 5000);
            });
        });
    </script>
</head>
<body class="bg-gray-50">
    <%- include('../../partials/navbar') %>

    <div class="max-w-6xl mx-auto mt-8 p-8 bg-white rounded shadow">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold">Daftar User</h2>
            <a href="/admin/users/tambah" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Tambah User</a>
        </div>

        <!-- Success/Error Messages -->
        <% if (typeof req !== 'undefined' && req.query.success) { %>
            <div class="message mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
                <%= req.query.success %>
            </div>
        <% } %>

        <% if (typeof req !== 'undefined' && req.query.error) { %>
            <div class="message mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
                <%= req.query.error %>
            </div>
        <% } %>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
            <input type="text" id="filterNama" oninput="filterTabel()" placeholder="Cari Nama" class="border px-3 py-2 rounded" />
            <input type="text" id="filterEmail" oninput="filterTabel()" placeholder="Cari Email" class="border px-3 py-2 rounded" />
            <select id="filterRole" onchange="filterTabel()" class="border px-3 py-2 rounded">
                <option value="semua">Semua Role</option>
                <option value="admin">Admin</option>
                <option value="user">User</option>
            </select>
            <select id="filterStatus" onchange="filterTabel()" class="border px-3 py-2 rounded">
                <option value="semua">Semua Status</option>
                <option value="aktif">Aktif</option>
                <option value="nonaktif">Nonaktif</option>
            </select>
        </div>
        <div class="mb-4">
            <button onclick="resetFilter()" class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700">Reset Filter</button>
        </div>

        <div class="overflow-x-auto">
            <table id="tabelUser" class="min-w-full table-auto border text-sm">
                <thead>
                    <tr class="bg-gray-200 text-left">
                        <th class="px-3 py-2 border">Nama</th>
                        <th class="px-3 py-2 border">Email</th>
                        <th class="px-3 py-2 border">Role</th>
                        <th class="px-3 py-2 border">Status</th>
                        <th class="px-3 py-2 border">Tanggal Dibuat</th>
                        <th class="px-3 py-2 border">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users.length === 0) { %>
                        <tr>
                            <td colspan="6" class="px-3 py-4 text-center text-gray-500">Belum ada user yang terdaftar.</td>
                        </tr>
                    <% } else { %>
                        <% users.forEach(user => { %>
                        <tr>
                            <td class="px-3 py-2 border" data-nama>
                                <a href="/admin/users/<%= user._id %>" class="text-blue-600 hover:underline">
                                    <%= user.nama %>
                                </a>
                            </td>
                            <td class="px-3 py-2 border" data-email>
                                <%= user.email %>
                            </td>
                            <td class="px-3 py-2 border" data-role>
                                <span class="inline-block px-2 py-1 text-xs font-medium rounded-full 
                                           <%= user.role === 'admin' ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
                                    <%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %>
                                </span>
                            </td>
                            <td class="px-3 py-2 border" data-status>
                                <span class="px-2 py-1 rounded text-xs <%= user.status === 'Aktif' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                    <%= user.status %>
                                </span>
                            </td>
                            <td class="px-3 py-2 border">
                                <%= new Date(user.created_at).toLocaleDateString('id-ID') %>
                            </td>
                            <td class="px-3 py-2 border">
                                <div class="flex flex-wrap gap-2">
                                    <a href="/admin/users/edit/<%= user._id %>" class="px-2 py-1 bg-yellow-400 text-white rounded hover:bg-yellow-500">Edit</a>
                                    <button onclick="toggleUserStatus('<%= user._id %>', '<%= user.status %>')" 
                                            class="px-2 py-1 <%= user.status === 'Aktif' ? 'bg-orange-500' : 'bg-green-500' %> text-white rounded hover:opacity-80">
                                        <%= user.status === 'Aktif' ? 'Nonaktifkan' : 'Aktifkan' %>
                                    </button>
                                    <form action="/admin/users/hapus/<%= user._id %>" method="POST" onsubmit="return confirm('Yakin ingin menghapus user ini?')">
                                        <button type="submit" class="px-2 py-1 bg-red-600 text-white rounded hover:bg-red-700">Hapus</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html> 