<!DOCTYPE html>
<html>
<head>
    <title>Detail User</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <%- include('../../partials/navbar') %>

    <div class="max-w-4xl mx-auto mt-8 p-8 bg-white rounded shadow">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold">Detail User</h2>
            <div class="flex gap-2">
                <a href="/admin/users/edit/<%= user._id %>" class="px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600">Edit User</a>
                <a href="/admin/users" class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700">Kembali</a>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Informasi Utama -->
            <div class="space-y-6">
                <div class="bg-blue-50 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-blue-800 mb-4">Informasi Utama</h3>
                    <div class="space-y-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Nama Lengkap</label>
                            <p class="text-lg font-semibold text-gray-900"><%= user.nama %></p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Email</label>
                            <p class="text-lg text-gray-900"><%= user.email %></p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Role</label>
                            <span class="inline-block px-3 py-1 text-sm font-medium rounded-full 
                                       <%= user.role === 'admin' ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
                                <%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %>
                            </span>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Status</label>
                            <span class="inline-block px-3 py-1 text-sm font-medium rounded-full 
                                       <%= user.status === 'Aktif' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                <%= user.status %>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Informasi Sistem -->
                <div class="bg-gray-50 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">Informasi Sistem</h3>
                    <div class="space-y-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">ID User</label>
                            <p class="text-sm text-gray-600 font-mono"><%= user._id %></p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Tanggal Dibuat</label>
                            <p class="text-sm text-gray-600"><%= new Date(user.created_at).toLocaleString('id-ID') %></p>
                        </div>
                        <% if (user.updated_at) { %>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Terakhir Diupdate</label>
                            <p class="text-sm text-gray-600"><%= new Date(user.updated_at).toLocaleString('id-ID') %></p>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Statistik dan Aktivitas -->
            <div class="space-y-6">
                <!-- Statistik User -->
                <div class="bg-green-50 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-green-800 mb-4">Statistik User</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div class="text-center">
                            <div class="text-2xl font-bold text-green-600">
                                <%= typeof userStats !== 'undefined' ? userStats.totalActivities || 0 : 0 %>
                            </div>
                            <div class="text-sm text-green-700">Total Kegiatan</div>
                        </div>
                        <div class="text-center">
                            <div class="text-2xl font-bold text-blue-600">
                                <%= typeof userStats !== 'undefined' ? userStats.totalAnnouncements || 0 : 0 %>
                            </div>
                            <div class="text-sm text-blue-700">Total Pengumuman</div>
                        </div>
                    </div>
                </div>

                <!-- Aksi Cepat -->
                <div class="bg-yellow-50 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-yellow-800 mb-4">Aksi Cepat</h3>
                    <div class="space-y-3">
                        <button onclick="toggleUserStatus('<%= user._id %>', '<%= user.status %>')" 
                                class="w-full px-4 py-2 <%= user.status === 'Aktif' ? 'bg-orange-500' : 'bg-green-500' %> text-white rounded hover:opacity-80">
                            <%= user.status === 'Aktif' ? 'Nonaktifkan User' : 'Aktifkan User' %>
                        </button>
                        <form action="/admin/users/hapus/<%= user._id %>" method="POST" onsubmit="return confirm('Yakin ingin menghapus user ini? Tindakan ini tidak dapat dibatalkan.')">
                            <button type="submit" class="w-full px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">
                                Hapus User
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Informasi Keamanan -->
                <div class="bg-red-50 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-red-800 mb-4">Informasi Keamanan</h3>
                    <div class="space-y-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Password</label>
                            <p class="text-sm text-gray-600">•••••••• (terenkripsi)</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Terakhir Login</label>
                            <p class="text-sm text-gray-600">
                                <%= typeof user.last_login !== 'undefined' && user.last_login ? 
                                    new Date(user.last_login).toLocaleString('id-ID') : 'Belum pernah login' %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Riwayat Aktivitas (Opsional) -->
        <% if (typeof userActivities !== 'undefined' && userActivities.length > 0) { %>
        <div class="mt-8">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Riwayat Aktivitas Terbaru</h3>
            <div class="bg-white border rounded-lg overflow-hidden">
                <table class="min-w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Aktivitas</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tanggal</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% userActivities.forEach(activity => { %>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                <%= activity.description %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <%= new Date(activity.created_at).toLocaleString('id-ID') %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                    Berhasil
                                </span>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <% } %>
    </div>

    <script>
        function toggleUserStatus(userId, currentStatus) {
            const newStatus = currentStatus === 'Aktif' ? 'Nonaktif' : 'Aktif';
            if (confirm(`Yakin ingin mengubah status user menjadi ${newStatus}?`)) {
                fetch(`/admin/users/toggle-status/${userId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ status: newStatus })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Gagal mengubah status user');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Terjadi kesalahan saat mengubah status');
                });
            }
        }
    </script>
</body>
</html> 