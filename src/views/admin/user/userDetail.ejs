<!DOCTYPE html>
<html>
<head>
    <title>Detail Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <%- include('../../partials/navbar') %>

    <div class="max-w-7xl mx-auto mt-8 flex flex-col lg:flex-row gap-8 px-4">
        <!-- Kiri: Detail -->
        <div class="flex-1 bg-white rounded shadow p-6">
            <% if (user.foto) { %>
                <img 
                    src="/uploads/foto/admin/<%= user.foto %>" 
                    alt="Foto Admin" 
                    class="w-full h-64 object-cover rounded mb-6 shadow cursor-pointer"
                    onclick="bukaModal('/uploads/foto/admin/<%= user.foto %>')"
                >
            <% } else { %>
                <div class="w-full h-64 bg-blue-100 rounded mb-6 flex items-center justify-center">
                    <i class="fas fa-user-shield text-6xl text-blue-600"></i>
                </div>
            <% } %>

            <h2 class="text-3xl font-bold mb-6">
                <%= user.nama %>
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-gray-700 mb-6">
                <!-- Username -->
                <div class="flex items-start gap-3">
                    <div class="text-2xl mt-1">üë§</div>
                    <div>
                        <p class="font-semibold">Username</p>
                        <p><%= user.username %></p>
                    </div>
                </div>
                <!-- Status -->
                <div class="flex items-start gap-3">
                    <div class="text-2xl mt-1">üìå</div>
                    <div>
                        <p class="font-semibold">Status</p>
                        <p><%= user.status %></p>
                    </div>
                </div>
                <!-- Role -->
                <div class="flex items-start gap-3">
                    <div class="text-2xl mt-1">üõ°Ô∏è</div>
                    <div>
                        <p class="font-semibold">Role</p>
                        <p>Admin</p>
                    </div>
                </div>
                <!-- ID Admin -->
                <div class="flex items-start gap-3">
                    <div class="text-2xl mt-1">#Ô∏è‚É£</div>
                    <div>
                        <p class="font-semibold">ID Admin</p>
                        <p><%= user.id_admin %></p>
                    </div>
                </div>
            </div>

            <!-- Kolom tanggal dibuat & update dihapus sesuai permintaan -->

            <!-- Aksi -->
            <div class="flex gap-4">
                <a href="/admin/users/edit/<%= user.id_admin %>" class="px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600">Edit</a>
                <button onclick="confirmDelete('<%= user.id_admin %>', '<%= user.nama %>')" class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">Hapus</button>
                <a href="/admin/users" class="px-4 py-2 bg-gray-300 rounded hover:bg-gray-400">Kembali</a>
            </div>
        </div>

        <!-- Kanan: Daftar Admin Lainnya -->
        <div class="w-full lg:w-80 flex flex-col gap-2">
            <div class="mb-2">
                <h3 class="text-lg font-bold text-gray-700">Admin Lainnya</h3>
                <p class="text-xs text-gray-500">Scroll ke bawah untuk melihat semua admin</p>
            </div>

            <div class="w-full h-[690px] overflow-y-auto flex flex-col gap-4 pr-1">
                <% usersList.forEach(item => { if (item.id_admin !== user.id_admin) { %>
                <a href="/admin/users/detail/<%= item.id_admin %>" class="flex items-start bg-white rounded shadow p-4 hover:bg-blue-50 transition">
                    <% if (item.foto) { %>
                        <img src="/uploads/foto/admin/<%= item.foto %>" alt="Foto Admin" class="w-16 h-16 object-cover rounded mr-4">
                    <% } else { %>
                        <div class="w-16 h-16 bg-gray-200 rounded mr-4 flex items-center justify-center text-gray-400 text-sm">No Image</div>
                    <% } %>
                    <div class="flex-1 text-sm text-gray-700">
                        <div class="flex items-center gap-2 font-semibold text-md mb-1">
                            <%= item.nama %>
                        </div>
                        <div class="flex items-center gap-2 mb-1 text-gray-600">
                            <span class="text-xs">üë§</span>
                            <%= item.username %>
                        </div>
                    </div>
                </a>
                <% } }) %>
            </div>
        </div>
    </div>

    <!-- Modal Gambar Fullscreen -->
    <div id="modalGambar" class="fixed inset-0 bg-black bg-opacity-80 z-50 hidden items-center justify-center">
        <button onclick="tutupModal()" class="absolute top-4 right-4 text-white text-3xl font-bold hover:text-red-400">√ó</button>
        <img id="modalImg" src="" alt="Gambar Besar" class="max-w-full max-h-[90vh] rounded shadow-xl border-4 border-white">
    </div>

    <script>
        // Modal handler
        function bukaModal(src) {
            document.getElementById('modalImg').src = src;
            document.getElementById('modalGambar').classList.remove('hidden');
            document.getElementById('modalGambar').classList.add('flex');
        }

        function tutupModal() {
            document.getElementById('modalGambar').classList.remove('flex');
            document.getElementById('modalGambar').classList.add('hidden');
            document.getElementById('modalImg').src = '';
        }

        function confirmDelete(id, name) {
            document.getElementById('deleteName').textContent = name;
            document.getElementById('deleteForm').action = `/admin/users/hapus/${id}`;
            document.getElementById('deleteModal').classList.remove('hidden');
            document.getElementById('deleteModal').classList.add('flex');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
            document.getElementById('deleteModal').classList.remove('flex');
        }
    </script>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden items-center justify-center">
        <div class="bg-white p-6 rounded-lg shadow-lg max-w-sm w-full mx-4">
            <h3 class="text-lg font-bold mb-4">Konfirmasi Hapus</h3>
            <p class="mb-4">Apakah Anda yakin ingin menghapus admin <strong id="deleteName"></strong>?</p>
            <p class="text-red-600 text-sm mb-4">Tindakan ini tidak dapat dibatalkan.</p>
            <div class="flex justify-end space-x-2">
                <button onclick="closeDeleteModal()" class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">
                    Batal
                </button>
                <form id="deleteForm" method="POST" class="inline">
                    <button type="submit" class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">
                        Hapus
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        function confirmDelete(id, name) {
            document.getElementById('deleteName').textContent = name;
            document.getElementById('deleteForm').action = `/admin/users/hapus/${id}`;
            document.getElementById('deleteModal').classList.remove('hidden');
            document.getElementById('deleteModal').classList.add('flex');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
            document.getElementById('deleteModal').classList.remove('flex');
        }
    </script>
</body>
</html> 