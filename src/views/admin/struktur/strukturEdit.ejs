<!DOCTYPE html>
<html>
<head>
    <title>Edit Struktur Padukuhan</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <%- include('../../partials/navbar') %>

    <div class="max-w-4xl mx-auto mt-8 p-8 bg-white rounded shadow">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold">Edit Struktur Padukuhan</h2>
            <a href="/admin/struktur" class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700">
                Kembali
            </a>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                <%= error %>
            </div>
        <% } %>

        <form action="/admin/struktur/edit/<%= struktur.id_struktur %>" method="POST" enctype="multipart/form-data">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="md:col-span-2">
                    <div class="mb-4">
                        <label for="nama" class="block text-sm font-medium text-gray-700 mb-2">
                            Nama Lengkap <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                               id="nama" 
                               name="nama" 
                               value="<%= struktur.nama %>"
                               required>
                        <p class="text-sm text-gray-500 mt-1">Masukkan nama lengkap struktur</p>
                    </div>

                    <div class="mb-4">
                        <label for="jabatan" class="block text-sm font-medium text-gray-700 mb-2">
                            Jabatan <span class="text-red-500">*</span>
                        </label>
                        <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                                id="jabatan" 
                                name="jabatan" 
                                required>
                            <option value="">Pilih Jabatan</option>
                            <option value="Dukuh" <%= struktur.jabatan === 'Dukuh' ? 'selected' : '' %>>Dukuh</option>
                            <option value="Ketua RT" <%= struktur.jabatan === 'Ketua RT' ? 'selected' : '' %>>Ketua RT</option>
                            <option value="Ketua RW" <%= struktur.jabatan === 'Ketua RW' ? 'selected' : '' %>>Ketua RW</option>
                        </select>
                        <p class="text-sm text-gray-500 mt-1">Pilih jabatan sesuai struktur organisasi</p>
                    </div>

                    <div class="mb-4">
                        <label for="kontak" class="block text-sm font-medium text-gray-700 mb-2">
                            Nomor Kontak
                        </label>
                        <input type="tel" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                               id="kontak" 
                               name="kontak" 
                               value="<%= struktur.kontak || '' %>"
                               placeholder="08xxxxxxxxxx">
                        <p class="text-sm text-gray-500 mt-1">Masukkan nomor telepon yang dapat dihubungi</p>
                    </div>
                </div>

                <div class="md:col-span-1">
                    <div class="mb-4">
                        <label for="foto" class="block text-sm font-medium text-gray-700 mb-2">
                            Foto
                        </label>
                        <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center">
                            <div id="imagePreview" class="mb-4">
                                <% if (struktur.foto) { %>
                                    <img id="preview" src="/uploads/foto/struktur/<%= struktur.foto %>" 
                                         alt="Foto <%= struktur.nama %>" 
                                         class="w-full h-48 object-cover rounded">
                                    <div class="mt-2">
                                        <small class="text-gray-500">Foto saat ini: <%= struktur.foto %></small>
                                    </div>
                                <% } else { %>
                                    <div id="placeholder" class="text-gray-400">
                                        <i class="fas fa-user text-4xl mb-2"></i>
                                        <p>Belum ada foto</p>
                                    </div>
                                <% } %>
                            </div>
                            <input type="file" 
                                   class="mt-4 w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   id="foto" 
                                   name="foto" 
                                   accept="image/*"
                                   onchange="previewImage(this)">
                            <p class="text-sm text-gray-500 mt-2">Upload foto baru (opsional). Format: JPG, PNG, atau GIF (max 2MB)</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex justify-end space-x-2 mt-6">
                <a href="/admin/struktur" class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">
                    Batal
                </a>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                    Update
                </button>
            </div>
        </form>
    </div>

    <script>
        function previewImage(input) {
            const preview = document.getElementById('preview');
            const imagePreview = document.getElementById('imagePreview');
            const placeholder = document.getElementById('placeholder');
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    // Remove placeholder if exists
                    if (placeholder) {
                        placeholder.classList.add('hidden');
                    }
                    
                    // Update or create preview image
                    if (preview) {
                        preview.src = e.target.result;
                    } else {
                        const newPreview = document.createElement('img');
                        newPreview.id = 'preview';
                        newPreview.src = e.target.result;
                        newPreview.alt = 'Preview';
                        newPreview.className = 'w-full h-48 object-cover rounded';
                        imagePreview.insertBefore(newPreview, imagePreview.firstChild);
                    }
                }
                
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Form validation
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const namaInput = document.getElementById('nama');
            const jabatanSelect = document.getElementById('jabatan');
            
            form.addEventListener('submit', function(e) {
                let isValid = true;
                
                // Reset previous error states
                namaInput.classList.remove('border-red-500');
                jabatanSelect.classList.remove('border-red-500');
                
                // Validate nama
                if (!namaInput.value.trim()) {
                    namaInput.classList.add('border-red-500');
                    isValid = false;
                }
                
                // Validate jabatan
                if (!jabatanSelect.value) {
                    jabatanSelect.classList.add('border-red-500');
                    isValid = false;
                }
                
                if (!isValid) {
                    e.preventDefault();
                    alert('Mohon lengkapi semua field yang wajib diisi');
                }
            });
        });
    </script>
</body>
</html> 